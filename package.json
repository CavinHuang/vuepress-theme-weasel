{
  "name": "vuepress-theme-weasel-demo",
  "version": "0.0.1",
  "description": "A vuepress theme and tools",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev:libs": "concurrently --kill-others \"pnpm run dev -C packages/shared\" \"pnpm run dev -C packages/sass-palette\" \"pnpm run dev -C packages/theme-weasel\"",
    "dev:demo": "pnpm run dev -r --filter @mr-huang/weasel-theme-demo",
    "pkg-run": "node ./scripts/pnpm-run.js",
    "plop": "plop",
    "build": "yarn clean && rollup -c",
    "build:watch": "rollup -c -w",
    "clean": "rimraf ./packages/**/lib",
    "commit": "git-cz",
    "release": "standard-version",
    "lint": "eslint ./packages --ext .vue,.js,.ts",
    "lint-fix": "eslint --fix ./packages --ext .vue,.js,.ts",
    "prettier": "prettier --write ./packages",
    "test": "jest --coverage",
    "deploy": "yarn build && pnpm publish",
    "demo:dev": "pnpm recursive run dev --filter @mr-huang/weasel-theme-demo",
    "demo:build": "pnpm recursive run build --filter @mr-huang/weasel-theme-demo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CavinHuang/vuepress-theme-weasel.git"
  },
  "keywords": [
    "weasel",
    "theme",
    "vuepress"
  ],
  "author": "cavinHuang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CavinHuang/vuepress-theme-weasel/issues"
  },
  "homepage": "https://github.com/CavinHuang/vuepress-theme-weasel#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push-todo-open": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json,vue}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR",
    "> 1%",
    "ie >= 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@vue/cli-plugin-babel": "^5.0.1",
    "@vuepress/core": "^2.0.0-beta.35",
    "@vuepress/plugin-theme-data": "^2.0.0-beta.35",
    "@vuepress/utils": "^2.0.0-beta.35",
    "autoprefixer": "^10.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "plop": "^2.7.4",
    "postcss": "^8.3.6",
    "prettier": "^2.3.1",
    "rollup": "^2.67.3",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-vue": "^6.0.0-beta.10",
    "sass": "^1.39.0",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.5.5",
    "vue": "^3.2.29"
  },
  "dependencies": {
    "@mr-huang/vuepress-theme-weasel": "workspace:^0.0.1",
    "@vuepress/client": "^2.0.0-beta.35",
    "balloon-css": "^1.2.0",
    "rimraf": "^3.0.2"
  }
}
