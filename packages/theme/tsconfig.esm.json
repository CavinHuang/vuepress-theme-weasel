{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "es2020"],
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["./src/client/*"],
      "@node/*": ["./src/node/*"],
      "@shared/*": ["./src/shared/*"],
      "@typings/*": ["./src/typings/*"],
      "@theme-weasel/*": ["./src/client/*"]
    },
    "types": ["@vuepress/client/types"]
  },
  "include": ["./src/client", "./src/shared","./src/typings", "./src/*.d.ts"]
}
